<% content_for :title, "日記" %>

<h1>一覧</h1>

<div id="diaries">
  <% @diaries.in_groups_of(3, false) do |diary_group| %>
    <div class="row">
      <% diary_group.each do |diary| %>
        <div class="col-md-4 my-3">
          <%= link_to diary do %>
            <%= image_tag(diary.picture_url(:thumb), width: '100%') if diary.picture.present? %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
